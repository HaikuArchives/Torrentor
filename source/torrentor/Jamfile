	AddMagnetLinkWindow.cpp
	AddTorrentWindow.cpp
	
	#
	# Torrent Inspector
	#
	InfoFileView.cpp
	InfoGeneralView.cpp
	InfoHeaderView.cpp
	InfoPeerView.cpp
	InfoTrackerView.cpp
	InfoTransferView.cpp
	InfoWindow.cpp
	PiecesView.cpp
	
	
	#
	TorrentObject.cpp
	TorrentPreferences.cpp
	TorrentRefFilter.cpp
	
	#
	IconUtil.cpp
	FormatText.cpp

    : 
    stdc++ network z be tracker localestub
	
	libtransmission.a
	
	crypto
	ssl
	curl
	event
	libnatpmp.a
	libminiupnp.a
	libdht.a
    libutp.a
